<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.dogapp.Controller"
            style="-fx-background-color: #D6EAF8;">

    <children>
        <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="30"
              prefWidth="500" prefHeight="500"
              style="-fx-background-color: #ffffff; -fx-padding: 20px; -fx-border-radius: 15px; -fx-background-radius: 15px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">

            <Label text="Choose a Dog Breed" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

            <ComboBox fx:id="breedSelector" prefWidth="200" style="-fx-font-size: 14px;"/>

            <ImageView fx:id="imgDog" fitWidth="400" fitHeight="300"
                       style="-fx-border-color: #ddd; -fx-border-width: 2px; -fx-border-radius: 10px;"/>

            <Button fx:id="btnLoadDog" text="Load Dog Image" onAction="#loadDogImage"
                    style="-fx-background-color: #ff6600; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-border-radius: 10px; -fx-background-radius: 10px;"/>
        </VBox>
    </children>
</AnchorPane>
